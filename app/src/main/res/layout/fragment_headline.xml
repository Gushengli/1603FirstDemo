<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/radioGroupHead0"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#565A62"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="#565A62"
            android:textColor="#FAFAFB"
            android:text="精选"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="#9C9C9E"
            android:background="#565A62"
            android:gravity="center"
            android:text="器材"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="#565A62"
            android:gravity="center"
            android:textColor="#9C9C9E"
            android:text="影响"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#9C9C9E"
            android:button="@null"
            android:background="#565A62"
            android:gravity="center"
            android:text="学院"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioGroupHead1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#565A62"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="#565A62"
            android:textColor="#FAFAFB"
            android:text="人像"
            />
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="#9C9C9E"
            android:gravity="center"
            android:background="#565A62"
            android:text="风光"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="#9C9C9E"
            android:background="#565A62"
            android:text="生态"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#9C9C9E"
            android:button="@null"
            android:background="#565A62"
            android:gravity="center"
            android:text="数码"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioGroupHead2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#565A62"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="#565A62"
            android:textColor="#FAFAFB"
            android:text="咨询"/>
        <RadioButton 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="#9C9C9E"
            android:background="#565A62"
            android:gravity="center"
            android:text="图赏"/>
        
    </RadioGroup>
    
    </RelativeLayout>
    <TextView 
        android:id="@+id/textViewLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/layout"
        android:background="#DF6108"/>

</RelativeLayout>
