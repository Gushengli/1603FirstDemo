<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liearlayoutHead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#565A62"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:textColor="@drawable/textcolor" 
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/renxiang" />

        <TextView
            android:textColor="@drawable/textcolor" 
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fengguang" />

        <TextView
            android:textColor="@drawable/textcolor" 
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/shengtai" />

        <TextView
            android:textColor="@drawable/textcolor" 
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/shuma" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xiantiao_my"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:gravity="center_vertical"
        android:background="#888888"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_jingxuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C81F1A" />

        <ImageView
            android:id="@+id/iv_qicai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
          />

        <ImageView
            android:id="@+id/iv_yingxiang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />

        <ImageView
            android:id="@+id/iv_xuyuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpShow_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
